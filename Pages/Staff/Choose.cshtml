@page
@model RetroTapes.Pages.Staff.ChooseModel
@{
    ViewData["Title"] = "Välj aktiv anställd";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h1 class="h5 mb-0">Välj aktiv anställd</h1>
    </div>
    <div class="card-body">
        @if (!Model.Items.Any())
        {
            <div class="alert alert-light border">Inga anställda ännu.</div>
        }
        else
        {
            <div class="list-group">
                @foreach (var s in Model.Items)
                {
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                       asp-page="/Staff/Use" asp-route-id="@s.Id" asp-route-returnUrl="@Model.ReturnUrl">
                        <span>@s.Name</span>
                        <span class="badge text-bg-secondary">ID @s.Id</span>
                    </a>
                }
            </div>
        }
    </div>
    <div class="card-footer">
        <a href="@Model.ReturnUrl" class="btn btn-outline-secondary">Tillbaka</a>
    </div>
</div>
