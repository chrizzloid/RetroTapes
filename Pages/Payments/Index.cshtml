@page
@model RetroTapes.Pages.Payments.IndexModel
@{
    ViewData["Title"] = "Payments";
}

<h1>Payments</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">Customer ID</label>
        <input class="form-control" type="number" name="customerId" value="@Model.CustomerId" />
    </div>
    <div class="col-auto">
        <label class="form-label">Rental ID</label>
        <input class="form-control" type="number" name="rentalId" value="@Model.RentalId" />
    </div>
    <div class="col-auto">
        <label class="form-label">Staff ID</label>
        <input class="form-control" type="number" name="staffId" value="@Model.StaffId" />
    </div>
    <div class="col-auto">
        <label class="form-label">From</label>
        <input class="form-control" type="date" name="from" value="@(Model.From?.ToString("yyyy-MM-dd"))" />
    </div>
    <div class="col-auto">
        <label class="form-label">To</label>
        <input class="form-control" type="date" name="to" value="@(Model.To?.ToString("yyyy-MM-dd"))" />
    </div>
    <div class="col-auto mt-4">
        <button class="btn btn-primary" type="submit">Filter</button>
        <a class="btn btn-outline-secondary" asp-page="./Index">Reset</a>
    </div>
</form>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Customer</th>
            <th>Staff</th>
            <th>Rental</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.PageData.Items)
        {
            <tr>
                <td>@p.PaymentId</td>
                <td>@p.PaymentDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@p.Amount.ToString("0.00")</td>
                <td>@(p.Customer is null ? "-" : $"{p.Customer.FirstName} {p.Customer.LastName} ({p.CustomerId})")</td>
                <td>@p.StaffId</td>
                <td>@(p.RentalId?.ToString() ?? "-")</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-primary" asp-page="./Details" asp-route-id="@p.PaymentId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.PageData.TotalCount == 0)
{
    <div class="alert alert-info">No payments found.</div>
}

<nav aria-label="pager">
    <ul class="pagination">
        @{
            var totalPages = (int)Math.Ceiling((double)Model.PageData.TotalCount / Model.PageData.PageSize);
            for (int p = 1; p <= totalPages; p++)
            {
                var active = p == Model.PageData.Page ? "active" : "";
                <li class="page-item @active">
                    <a class="page-link"
                       asp-page="./Index"
                       asp-route-pageNo="@p"
                       asp-route-customerId="@(Model.CustomerId)"
                       asp-route-rentalId="@(Model.RentalId)"
                       asp-route-staffId="@(Model.StaffId)"
                       asp-route-from="@(Model.From?.ToString("yyyy-MM-dd"))"
                       asp-route-to="@(Model.To?.ToString("yyyy-MM-dd"))">
                        @p
                    </a>
                </li>
                ;
            }
        }
    </ul>
</nav>

<a class="btn btn-success" asp-page="./Create">New Payment</a>
