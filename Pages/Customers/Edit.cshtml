@page "{id:int}"
@model RetroTapes.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Redigera kund";
}

<h1 class="h3 mb-3">Redigera kund</h1>

<partial name="_Flash" />

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Vm.CustomerId" />
    <input type="hidden" asp-for="Vm.LastUpdate" />
    
   @{ 
       
       ViewData["StoreOptions"] = @Model.StoreOptions;
   
   
   }
  
    <partial name="_CustomerForm" for="Vm"/> @* for krävs för rätt binding dvs Vm.FirstName etc. *@

    <div class="d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-primary">Spara</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Tillbaka</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
