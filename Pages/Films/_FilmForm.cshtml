@using Microsoft.AspNetCore.Mvc.Rendering
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model RetroTapes.ViewModels.FilmEditVm


<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<div class="row g-3">
    <div class="col-md-8">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="ReleaseYear" class="form-label"></label>
        <input asp-for="ReleaseYear" class="form-control" />
        <span asp-validation-for="ReleaseYear" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="LanguageId" class="form-label">Språk</label>
        <select asp-for="LanguageId" class="form-select"
                asp-items="@(ViewData["LanguageOptions"] as IEnumerable<SelectListItem>)">
            <option value="">Välj språk</option>
        </select>
        <span asp-validation-for="LanguageId" class="text-danger"></span>

    </div>

    <div class="col-md-6">
        <label asp-for="OriginalLanguageId" class="form-label">Originalspråk (valfritt)</label>
        <select asp-for="OriginalLanguageId" class="form-select"
                asp-items="@(ViewData["LanguageOptions"] as IEnumerable<SelectListItem>)">
            <option value="">(ingen)</option>
        </select>


    </div>

    <div class="col-md-6">
        <label class="form-label">Kategorier</label>
        <small class="text-muted d-block mb-1">Tips: håll Ctrl (Cmd på Mac) för flera val.</small>   <!-- LÄGG TILL HÄR -->
        <select asp-for="CategoryIds" class="form-select"
                asp-items="@(ViewData["CategoryOptions"] as IEnumerable<SelectListItem>)"
                multiple size="6">
        </select>

    </div>

    <div class="col-md-6">
        <label class="form-label">Skådespelare</label>
        <small class="text-muted d-block mb-1">Tips: håll Ctrl (Cmd på Mac) för flera val.</small>   <!-- LÄGG TILL HÄR -->
        <select asp-for="ActorIds" class="form-select"
                asp-items="@(ViewData["ActorOptions"] as IEnumerable<SelectListItem>)"
                multiple size="6">
        </select>

    </div>
</div>
