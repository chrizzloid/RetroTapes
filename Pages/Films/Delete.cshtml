@page "{id:int}"
@model RetroTapes.Pages.Films.DeleteModel
@{
    ViewData["Title"] = "Ta bort film";
}

<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger mb-2"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="LastUpdate" value="@Model.LastUpdate.ToString("O")" />

    <p>Vill du ta bort <strong>@Model.Title</strong>?</p>

    <button type="submit" class="btn btn-danger">Ta bort</button>
    <a asp-page="Index" class="btn btn-outline-secondary">Avbryt</a>
</form>

