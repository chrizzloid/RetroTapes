@page "{id:int}"
@model RetroTapes.Pages.Films.DeleteModel
@{
    ViewData["Title"] = "Ta bort film";
}

<div class="alert alert-warning">
    <h4 class="alert-heading">Vill du ta bort den här filmen?</h4>
    <p class="mb-0"><strong>@Model.Title</strong></p>
</div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="LastUpdate" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Ja, ta bort</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Avbryt</a>
    </div>
</form>
